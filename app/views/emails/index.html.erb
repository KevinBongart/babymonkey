<p id="notice"><%= notice %></p>

<%= form_for(@email) do |f| %>
  <div class="field">
    <%= f.label :email_address %><br />
    <%= f.text_field :email_address %>
  </div>

  <div class="field">
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </div>

  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </div>

  <div class="field">
    <%= f.label :html %><br />
    <%= f.text_area :html %>
  </div>

  <div class="actions">
    <%= f.submit "Send" %>
  </div>
<% end %>
